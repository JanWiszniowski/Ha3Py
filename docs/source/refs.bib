@article{Kijko2025,
    author = {Kijko, Andrzej},
    title = {Bayesian Assessment of the Maximum Possible Earthquake Magnitude mmax},
    journal = {Journal of the Geological Society of India},
    volume = {101},
    number = {6},
    pages = {764-769},
    year = {2025},
    month = {06},
    abstract = {This work is focused on the Bayesian assessment of the regional maximum possible earthquake magnitude mmax. The problem in the application of current statistical procedures for mmax is that seismic event catalogues are often too short to provide a reliable assessment of mmax . The remedy is to incorporate any relevant information about mmax in the computation processes. The roots of such information could be in geophysics, geology, tectonics, rheological behaviour of deformation in lithospheric zones, the worldwide database of mmax, and the seismicity of similar regions. Regarding anthropogenic seismicity induced by large water reservoirs, mining or fracking, the relevant information is available in the observations deriving from explorations of neighbouring mines and fields. The second problem in the application of the current Bayesian formalism for m estimation is that one of the components of the posterior max distribution is the sample likelihood function for which the range of observations (earthquake magnitudes) depends on the unknown mmax. This dependence violates the regularity property. The resulting likelihood function, therefore, reaches its maximum at the maximum observed earthquake magnitude mmaxobs, and not at the required maximum possible magnitude mmax. As the sample likelihood function is a key component of the posterior distribution, the posterior estimate of m^max, is biased. Here, a brief discussion is presented on the currently used Bayesian procedure for mmax and several alternative approaches are suggested.},
    issn = {0016-7622},
    doi = {10.17491/jgsi/2025/174157},
    url = {https://doi.org/10.17491/jgsi/2025/174157},
    eprint = {https://pubs.geoscienceworld.org/geosocindia/jour-geosocindia/article-pdf/101/6/764/7220300/174157.pdf},
}

@Article{Kijko_and_Graham_1998,
author="Kijko, A. and Graham, G.",
title="Parametric-historic Procedure for Probabilistic Seismic  Hazard Analysis  Part I: Estimation of Maximum Regional Magnitude mmax",
journal="pure and applied geophysics",
year="1998",
month="Oct",
day="01",
volume="152",
number="3",
pages="413--442",
abstract="---A new methodology for probabilistic seismic hazard analysis (PSHA) is described. The approach combines the best features of the ``deductive'' (Cornell, 1968) and ``historical'' (Veneziano et al., 1984) procedures. It can be called a ``parametric-historic'' procedure.{\textparagraph}The maximum regional magnitude mmax is of paramount importance in this approach and Part I of our work presents some of the statistical techniques which can be used for its evaluation. The work is an analysis of parametric procedures for the evaluation of mmax, when the form of the magnitude distribution is specified. For each of the formulae given there are notes on its origin, assumptions made of its derivation, and some comparisons. The statistical concepts of bias and variance are considered for each formula, and appropriate expressions for these are also given. Also, following Knopoff and Kagan (1977), we shall demonstrate why there must be a finite upper bound to the largest seismic event if the Gutenberg-Richter frequency-magnitude relation is accepted.",
issn="1420-9136",
doi="10.1007/s000240050161",
url="https://doi.org/10.1007/s000240050161"
}

